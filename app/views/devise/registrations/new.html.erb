<div class="col-md-offset-2 col-md-8">
	        
	<div class="panel panel-success">
 
		<div class="panel-heading">
			<h2>New members, please Sign-up below</h2>
		</div>	
		
		<div class="panel-body">
			<legend>
              	Enter your account credentials
            </legend>
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<%= devise_error_messages! %>
				
				<div class="form-group">
				  <%= f.label :name %>
				  <%= f.text_field :name, autofocus: true, placeholder: "Enter your full name", class: "form-control" %>
				</div>

				<div class="form-group">
					<%= f.label :email %>
					<%= f.email_field :email, autofocus: true, placeholder: "Enter your email address", class: "form-control" %>		
				</div>

				<div class="form-group">
					<%= f.label :password %>
					<%= f.password_field :password, autocomplete: "off", placeholder: "Enter your password", class: "form-control"  %>
				</div>

				<div class="form-group">
					<%= f.label :password_confirmation %>
				    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm your password", class: "form-control"  %>
				</div>

			<!--	<div class="form-group">
					<%= f.submit "Sign-up", class: "btn btn-danger btn-lg"%>
				</div> -->

				<%= button_tag(type: 'submit', class: "btn btn-danger btn-lg") do %>
					<span class="glyphicon glyphicon-new-window"></span>  Sign-up
				<% end %>
				
			<% end %>
		</div>
		
		<div class="panel-footer">
			<%= render "devise/shared/links" %>
		</div>
	</div>	
</div>
